WindowManager:
    MainWindow:
    FileWindow:


<MainWindow>:
    canvas.before:
        #Color:
            #rgba: 1, 0, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: "white.jpg"
    name: "main"
    RelativeLayout:
        rows: 5
        MDLabel:
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            text: "LSE data scraper"
            font_style: 'H2'
            halign: "center"
            size_hint_y: None
            height: 200
        Widget:
            id: separator
            size_hint_y: None
            height: 6
            canvas:
                Color:
                    rgb: 1., 0., 1.
                Rectangle:
                    pos: root.width/6.5, root.height/1.6
                    size: separator.width/1.5, 2
        Widget:
            id: separator
            size_hint_y: None
            height: 6
            canvas:
                Color:
                    rgb: 1., 0., 1.
                Rectangle:
                    pos: root.width/6.5, root.height/2.15
                    size: separator.width/1.5, 2
        GridLayout:            
            rows: 2
            cols: 4
            col_force_default: True
            col_default_width: 150
            row_force_default: True
            row_default_height: 90
            pos_hint: {'center_x': 0.25, 'center_y': 0.6}
            size_hint: None, None
            GridLayout:
                cols: 2
                size_hint: None, None
                width: 45
                height: 40
                Label:
                    text: "All"
                    color: 1,0,1,1
                MDCheckbox:
                   
            GridLayout:
                cols: 2
                size_hint: None, None
                width: 160
                height: 40
                Label:
                    text: "Income statement"
                    color: 1,0,1,1
                MDCheckbox:
                 
            GridLayout:
                cols: 2
                size_hint: None, None
                width: 160
                height: 40
                Label:
                    text: "Balance sheet"
                    color: 1,0,1,1
                MDCheckbox:
                    
            GridLayout:
                cols: 2
                size_hint: None, None
                width: 70
                height: 40
                Label:
                    text: "Ratios"
                    color: 1,0,1,1
                MDCheckbox:
                  
            GridLayout:
                cols: 2
                size_hint: None, None
                width: 140
                height: 40
                Label:
                    text: "Total revenue"
                    color: 1,0,1,1
                MDCheckbox:
             
            GridLayout:
                cols: 2
                size_hint: None, None
                width: 100
                height: 40
                Label:
                    text: "Net profit"
                    color: 1,0,1,1
                MDCheckbox:
                  
            GridLayout:
                cols: 2
                size_hint: None, None
                width: 110
                height: 40
                Label:
                    text: "Total assets"
                    color: 1,0,1,1
                MDCheckbox:
                   
            GridLayout:
                cols: 2
                size_hint: None, None
                width: 80
                height: 40
                Label:
                    text: "PE ratio"
                    color: 1,0,1,1
                MDCheckbox:
                  
        MDTextField:
            id: scrape_location
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            size_hint_x: None
            width: 400
            hint_text: "Enter location of scraping spreadsheet"
            helper_text: r"Example: C:\Users\JoeBloggs\Excel\Example_list.xlsx"
            helper_text_mode: "on_focus"
        MDTextField:
            id: save_location
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint_x: None
            width: 400
            hint_text: "Where would you like to save scraped data?"
            helper_text: r"Example: C:\Users\JoeBloggs\Excel"
            helper_text_mode: "on_focus"
        MDRaisedButton:
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            text: "Scrape!"
            md_bg_color: 1, 0, 1, 1
            on_release: 
                root.ids.info_label.text = root.show_data(root.ids.scrape_location.text)
                root.ids.scrape_location.text = ""
                root.ids.save_location.text = ""
        MDLabel:
            id: info_label
            pos_hint: {'center_x': 0.5, 'center_y': 0.05}
            size_hint_x: None
            width: 200
            text: ""
            halign: "center"

<FileWindow>:
    name: "file"
    canvas.before:
        Color:
            rgba: 0, 1, 0, 0
    FileChooserListView:
        id: filechoose
        path: "C:\\Users"


